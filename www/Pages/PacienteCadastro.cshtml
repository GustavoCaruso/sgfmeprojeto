@page
@model www.Pages.PacienteCadastroModel
@{
    ViewData["Title"] = "Cadastro de Paciente";
}

<style>
    .section {
        border: 1px solid #ccc;
        border-radius: 8px;
        padding: 20px;
        margin-bottom: 20px;
        background-color: #f9f9f9;
    }

    .section-title {
        margin-bottom: 20px;
    }

    .btn-margin {
        margin-top: 15px;
        margin-bottom: 15px;
    }

    .table-responsive td {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .table-responsive th, .table-responsive td {
        max-width: 150px; /* Ajuste conforme necessário */
    }
</style>

<form id="pacienteForm" class="row g-3">
    <div id="loading" style="display: none; text-align: center;">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Carregando...</span>
        </div>
    </div>

    <div class="row align-items-center mb-3">
        <div class="col-auto">
            <i class="fas fa-user-injured fa-3x"></i>
        </div>
        <div class="col">
            <h1>Cadastro de Paciente</h1>
        </div>
        <div class="col-auto">
            <button type="button" class="btn btn-dark" onclick="location.href='/PacienteGerenciamento'">
                Gerenciamento de Pacientes
            </button>
        </div>
    </div>
    <hr />

    <div class="section">
        <h2 class="section-title">Informações Pessoais</h2>
        <div class="row">
            <div class="col-md-2">
                <label for="txtid" class="form-label">Código</label>
                <input type="text" class="form-control" id="txtid" value="0" placeholder="Código" disabled>
            </div>

            <div class="col-md-2">
                <label for="txtdataCadastro" class="form-label">Data de Cadastro</label>
                <input type="date" class="form-control" id="txtdataCadastro" disabled>
            </div>

            <div class="col-md-2">
                <label for="selectStatus" class="form-label">Status</label>
                <select class="form-control" id="selectStatus" required>
                    <option value="0">Selecione um status</option>
                </select>
            </div>

            <div class="col-md-6">
                <label for="txtnomeCompleto" class="form-label">Nome Completo</label>
                <input type="text" class="form-control" id="txtnomeCompleto" placeholder="Nome Completo" required maxlength="100">
                <div class="invalid-feedback">
                    Por favor, insira o nome completo.
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-2">
                <label for="txtdataNascimento" class="form-label">Data de Nascimento</label>
                <input type="date" class="form-control" id="txtdataNascimento" required>
                <div class="invalid-feedback">
                    Por favor, insira a data de nascimento.
                </div>
            </div>

            <div class="col-md-2">
                <label for="txtidade" class="form-label">Idade</label>
                <input type="text" class="form-control" id="txtidade" placeholder="Idade" disabled>
            </div>

            <div class="col-md-2">
                <label for="txtpeso" class="form-label">Peso</label>
                <input type="number" class="form-control" id="txtpeso" placeholder="Peso" required>
                <div class="invalid-feedback">
                    Por favor, insira o peso.
                </div>
            </div>

            <div class="col-md-2">
                <label for="txtaltura" class="form-label">Altura (CM)</label>
                <input type="number" class="form-control" id="txtaltura" placeholder="Altura" required>
                <div class="invalid-feedback">
                    Por favor, insira a altura.
                </div>
            </div>

            <div class="col-md-2">
                <label for="selectSexo" class="form-label">Sexo</label>
                <select class="form-control" id="selectSexo" required>
                    <option value="0">Selecione um sexo</option>
                </select>
            </div>

            <div class="col-md-2">
                <label for="selectCorRaca" class="form-label">Cor/Raça</label>
                <select class="form-control" id="selectCorRaca" required>
                    <option value="0">Selecione uma cor/raça</option>
                </select>
            </div>

            <div class="col-md-2">
                <label for="selectEstadoCivil" class="form-label">Estado Civil</label>
                <select class="form-control" id="selectEstadoCivil" required>
                    <option value="0">Selecione um estado civil</option>
                </select>
            </div>

            <div class="col-md-4">
                <label for="txtnomeConjuge" class="form-label">Nome do Cônjuge</label>
                <input type="text" class="form-control" id="txtnomeConjuge" placeholder="Nome do Cônjuge" maxlength="100">
            </div>

            <div class="col-md-2">
                <label for="selectNaturalidadeUf" class="form-label">Naturalidade - UF</label>
                <select class="form-control" id="selectNaturalidadeUf" required>
                    <option value="0">Selecione a UF</option>
                </select>
            </div>

            <div class="col-md-4">
                <label for="selectNaturalidadeCidade" class="form-label">Naturalidade - Cidade</label>
                <select class="form-control" id="selectNaturalidadeCidade" required>
                    <option value="0">Selecione uma cidade</option>
                </select>
            </div>

            <div class="col-md-2">
                <label for="txtrgNumero" class="form-label">RG Número</label>
                <input type="text" class="form-control" id="txtrgNumero" placeholder="RG Número" required maxlength="11">
                <div class="invalid-feedback">
                    Por favor, insira o número do RG.
                </div>
            </div>

            <div class="col-md-2">
                <label for="txtrgDataEmissao" class="form-label">RG Data de Emissão</label>
                <input type="date" class="form-control" id="txtrgDataEmissao" required>
                <div class="invalid-feedback">
                    Por favor, insira a data de emissão do RG.
                </div>
            </div>

            <div class="col-md-2">
                <label for="txtrgOrgaoExpedidor" class="form-label">RG Órgão Expedidor</label>
                <input type="text" class="form-control" id="txtrgOrgaoExpedidor" placeholder="RG Órgão Expedidor" required maxlength="50">
                <div class="invalid-feedback">
                    Por favor, insira o órgão expedidor do RG.
                </div>
            </div>

            <div class="col-md-2">
                <label for="selectRgUfEmissao" class="form-label">RG UF de Emissão</label>
                <select class="form-control" id="selectRgUfEmissao" required>
                    <option value="0">Selecione a UF</option>
                </select>
                <div class="invalid-feedback">
                    Por favor, insira a UF de emissão do RG.
                </div>
            </div>

            <div class="col-md-2">
                <label for="txtcnsNumero" class="form-label">CNS Número</label>
                <input type="text" class="form-control" id="txtcnsNumero" placeholder="CNS Número" required maxlength="18">
                <div class="invalid-feedback">
                    Por favor, insira o número do CNS.
                </div>
            </div>

            <div class="col-md-2">
                <label for="txtcpfNumero" class="form-label">CPF Número</label>
                <input type="text" class="form-control numeric-only" id="txtcpfNumero" placeholder="CPF Número" required inputmode="numeric" maxlength="14">
                <div class="invalid-feedback">
                    Por favor, insira o número do CPF.
                </div>
            </div>

            <div class="col-md-2">
                <label for="selectProfissao" class="form-label">Profissão</label>
                <select class="form-control" id="selectProfissao" required>
                    <option value="0">Selecione uma profissão</option>
                </select>
            </div>

            <div class="col-md-6">
                <label for="txtnomeMae" class="form-label">Nome da Mãe</label>
                <input type="text" class="form-control" id="txtnomeMae" placeholder="Nome da Mãe" required maxlength="100">
                <div class="invalid-feedback">
                    Por favor, insira o nome da mãe.
                </div>
            </div>
        </div>
    </div>

    <div class="section">
        <h2 class="section-title">Contatos</h2>
        <div class="row">
            <div class="col-md-2">
                <label for="selectTipoContato">Tipo de Contato</label>
                <select class="form-control" id="selectTipoContato" required>
                    <option value="0">Selecione um tipo de contato</option>
                </select>
            </div>

            <div class="col-md-3">
                <label for="txtValorContato">Valor do Contato</label>
                <input type="text" class="form-control" id="txtValorContato" placeholder="Valor do Contato" required maxlength="100">
            </div>

            <div class="col-12 btn-margin">
                <button type="button" class="btn btn-primary" id="btnAdicionarContato">Adicionar Contato</button>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover" id="contatoTable">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Tipo</th>
                        <th scope="col">Valor</th>
                        <th scope="col">Ações</th> <!-- Nova coluna para ações -->
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
        <div id="mensagemValidacao" class="text-danger"></div>
    </div>

    <div class="section">
        <h2 class="section-title">Endereços</h2>
        <div class="row">
            <div class="col-md-2">
                <label for="selectTipoEndereco">Tipo de Endereço</label>
                <select class="form-control" id="selectTipoEndereco" required>
                    <option value="0">Selecione um tipo de endereço</option>
                </select>
            </div>

            <div class="col-md-6">
                <label for="txtLogradouro">Logradouro</label>
                <input type="text" class="form-control" id="txtLogradouro" placeholder="Logradouro" required maxlength="150">
            </div>

            <div class="col-md-2">
                <label for="txtNumero">Número</label>
                <input type="number" class="form-control" id="txtNumero" placeholder="Número" required maxlength="10">
            </div>

            <div class="col-md-2">
                <label for="txtComplemento">Complemento</label>
                <input type="text" class="form-control" id="txtComplemento" placeholder="Complemento" maxlength="20">
            </div>

            <div class="col-md-4">
                <label for="txtBairro">Bairro</label>
                <input type="text" class="form-control" id="txtBairro" placeholder="Bairro" required maxlength="50">
            </div>

            <div class="col-md-2">
                <label for="selectEstado">UF</label>
                <select class="form-control" id="selectEstado" required>
                    <option value="0">Selecione a UF</option>
                </select>
            </div>

            <div class="col-md-6">
                <label for="selectMunicipio">Cidade</label>
                <select class="form-control" id="selectMunicipio" required>
                    <option value="0">Selecione uma Cidade</option>
                </select>
            </div>

            <div class="col-md-2">
                <label for="txtCep">CEP</label>
                <input type="text" class="form-control" id="txtCep" placeholder="CEP" required maxlength="9">
            </div>

            <div class="col-md-6">
                <label for="txtPontoReferencia">Ponto de Referência</label>
                <input type="text" class="form-control" id="txtPontoReferencia" placeholder="Ponto de Referência" maxlength="100">
            </div>

            <div class="col-12 btn-margin">
                <button type="button" class="btn btn-primary" id="btnAdicionarEndereco">Adicionar Endereço</button>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover" id="enderecoTable">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Tipo</th>
                        <th scope="col">Logradouro</th>
                        <th scope="col">Número</th>
                        <th scope="col">Complemento</th>
                        <th scope="col">Bairro</th>
                        <th scope="col">Cidade</th>
                        <th scope="col">UF</th>
                        <th scope="col">CEP</th>
                        <th scope="col">Ponto de Referência</th>
                        <th scope="col">Ações</th> <!-- Nova coluna para ações -->
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
        <div id="mensagemValidacaoEndereco" class="text-danger"></div>
    </div>


    <div class="section">
        <h2 class="section-title">Representantes</h2>
        <div class="row">
            <div class="col-md-4">
                <label for="txtRepresentanteRg">RG do Representante</label>
                <input type="text" id="txtRepresentanteRg" class="form-control" />
            </div>
            <div class="col-md-2 align-self-end">
                <button id="btnBuscarRepresentante" type="button" class="btn btn-primary">Buscar Representante</button>
            </div>

        </div>

        <div class="table-responsive btn-margin">
            <table id="representanteTable" class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Nome Completo</th>
                        <th scope="col">RG</th>
                        <th scope="col">CPF</th>
                        <th scope="col">Data de Nascimento</th>
                        <th scope="col">Ação</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Representantes encontrados serão listados aqui -->
                </tbody>
            </table>
        </div>
    </div>







    <div class="col-12">
        <button type="button" class="btn btn-primary" onclick="location.href='/PacienteGerenciamento'">Voltar</button>
        <button type="button" id="btnsalvar" class="btn btn-primary">Salvar</button>
        <button type="button" id="btnlimpar" class="btn btn-primary">Limpar</button>
    </div>

</form>

@section Scripts {
    <script src="~/js/Paciente.js"></script>
}
