<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - www</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css">

    <!-- SweetAlert-->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        body {
            background: #eee;
        }

        .logo {
            width: 200px;
            height: auto;
        }

        #side_nav {
            background: #1f2937;
            min-width: 250px;
            max-width: 250px;
            transition: all 0.3s;
        }

        .content {
            min-height: 100vh;
            width: 100%;
        }

        hr.h-color {
            background: #eee;
        }

        /* Hover state for sidebar items */
        .sidebar li:hover {
            background: #eee;
            border-radius: 8px;
        }

            .sidebar li:hover a,
            .sidebar li:hover a:hover {
                color: #1f2937; /* Dark text on hover */
            }

        /* Active state for current page */
        .sidebar li.active {
            background: #eee;
            border-radius: 8px;
        }

            .sidebar li.active a,
            .sidebar li.active a:hover {
                color: #1f2937; /* Dark text for active page */
            }

        /* Default link color */
        .sidebar li a {
            color: #fff; /* White text for other items */
        }

        @@media (max-width: 767px) {
            #side_nav {
                margin-left: -250px;
                position: fixed;
                height: 100vh;
                z-index: 1000;
                overflow-y: auto;
                width: 250px;
            }

                #side_nav.active {
                    margin-left: 0;
                }

            .content {
                padding-left: 0;
            }
        }

        .open-btn {
            position: fixed;
            top: 15px;
            left: 15px;
            z-index: 1100;
        }

        .navbar-nav {
            margin-left: auto;
        }

        .navbar-collapse {
            justify-content: flex-end; /* Align navbar content to the right */
        }

        .navbar-nav.ms-auto {
            margin-left: auto; /* Push navbar items to the right */
        }

        .navbar {
            padding: 0.5rem 1rem; /* Add padding to navbar */
        }

        @@media (max-width: 767px) {
            .navbar-collapse {
                display: flex;
                justify-content: flex-end; /* Keep navbar items aligned right */
            }

            .navbar-nav {
                flex-direction: row;
                align-items: center;
            }

                .navbar-nav .nav-link {
                    padding-left: 1rem;
                }
        }
    </style>
</head>
<body>
    <div class="main-container d-flex">
        <!-- Toggler button for smaller screens to open sidebar -->
        <button class="btn btn-primary open-btn d-md-none">
            <i class="fas fa-bars"></i>
        </button>

        <div class="sidebar" id="side_nav">
            <div class="header-box px-2 pt-3 pb-4 d-flex justify-content-between">
                <a class="navbar-brand" href="/Index">
                    <img src="/img/logo-sgfme.png" alt="Logo SGFME" class="logo">
                </a>
            </div>

            <ul class="list-unstyled px-2">
                <li class="nav-item @(ViewData["ActivePage"] == "Index" ? "active" : "")">
                    <a href="/Index" class="text-decoration-none px-3 py-2 d-block">
                        <i class="fas fa-home"></i> Início
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#submenuPaciente" data-bs-toggle="collapse" class="text-decoration-none px-3 py-2 d-block d-flex justify-content-between align-items-center">
                        <span><i class="fas fa-user-injured"></i> Paciente</span>
                        <i class="fas fa-chevron-down"></i>
                    </a>
                    <ul class="collapse nav flex-column ms-1" id="submenuPaciente">
                        <li class="w-100 @(ViewData["ActivePage"] == "PacienteCadastro" ? "active" : "")">
                            <a href="/PacienteCadastro" class="text-decoration-none px-3 py-2 d-block">Cadastrar Paciente</a>
                        </li>
                        <li class="w-100 @(ViewData["ActivePage"] == "PacienteGerenciamento" ? "active" : "")">
                            <a href="/PacienteGerenciamento" class="text-decoration-none px-3 py-2 d-block">Gerenciar Paciente</a>
                        </li>
                    </ul>
                </li>
                <!-- (demais itens do menu aqui, repita a estrutura acima para outros submenus) -->
            </ul>
            <hr class="h-color mx-2">
        </div>

        <div class="content">
            <nav class="navbar navbar-expand-md" style="background:#1f2937;">
                <div class="container-fluid">
                    <!-- Navbar content aligned to the right -->
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <!-- Exibir nome do usuário no perfil -->
                                <a class="nav-link active" aria-current="page" href="#">
                                    <i class="fas fa-user"></i> <span id="perfilUsuario">Nome do Usuário</span><br>
                                    <span id="perfilNome" style="font-size: 0.85em; color: #999;">Perfil do Usuário</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#" id="logoutBtn">Sair</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

            <div class="dashboard-content px-3 pt-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        $(document).ready(function () {
            // Verifica o token
            var token = sessionStorage.getItem('token');
            if (token == null || token == "") {
                window.location.href = '/login'; // Redireciona para a página de login se não houver token
            }

            // Requisição para buscar dados do usuário, incluindo perfil
            $.ajax({
                url: "https://localhost:7034/api/Usuario/dadosBasicos",
                method: "GET",
                headers: {
                    "Authorization": `Bearer ${token}` // Se necessário, passe o token
                },
                success: function (data) {
                    if (data && data.length > 0) {
                        var usuario = data[0]; // Assume que o primeiro resultado seja o usuário atual
                        $("#perfilUsuario").text(usuario.nomeUsuario);
                        $("#perfilNome").text(usuario.perfilusuario); // Exibe o nome do perfil do usuário
                    }
                },
                error: function () {
                    alert("Erro ao buscar os dados do usuário.");
                }
            });

            // Função para sair
            $("#logoutBtn").click(function () {
                sessionStorage.removeItem('token');
                sessionStorage.removeItem('idUsuario');
                sessionStorage.removeItem('nomeUsuario');
                window.location.href = '/login'; // Redireciona para a página de login após logout
            });

            // Toggle sidebar open and close with the same button
            $('.open-btn').on('click', function () {
                $('#side_nav').toggleClass('active');
            });

            // Handle active class for menu items
            $(".sidebar ul li a").on('click', function () {
                $(".sidebar ul li.active").removeClass('active');
                $(this).parent().addClass('active');
            });

            // Handle submenu toggle for better user experience
            $(".sidebar li > a[data-bs-toggle='collapse']").on('click', function () {
                let target = $(this).attr('href');
                let isOpen = $(target).hasClass('show');
                if (!isOpen) {
                    $(target).collapse('show');
                } else {
                    $(target).collapse('hide');
                }
            });

            // Preserve the active submenu state on page load
            $('.collapse').each(function () {
                if ($(this).find('.active').length > 0) {
                    $(this).collapse('show');
                }
            });
        });
    </script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
